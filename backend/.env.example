# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=servemee_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=servemee_db

# Application Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration (Backend - Service Account)
# Download service account key from Firebase Console and place in backend/firebase-admin-sdk.json
# Or set these environment variables:
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# CORS Configuration
FRONTEND_URL=http://localhost:3001

# File Upload Configuration (if using cloud storage)
# FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# JWT Configuration (if needed for additional security)
JWT_SECRET=your-jwt-secret-key-here

# Email Configuration (if implementing email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Logging Configuration
LOG_LEVEL=debug